<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>0.0.2</Version>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<PackageId>Platega.SDK</PackageId>
		<Authors>VeyDlin</Authors>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/VeyDlin/Platega.SDK</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>.NET SDK for Platega.io payment gateway API. Supports payment creation, status checking, rates, and webhooks with full async/await support.</Description>
		<PackageTags>platega;payment;gateway;api;sdk;crypto;sbp</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="10.0.0" />
	</ItemGroup>

</Project>
